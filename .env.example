# AgentHub Router Configuration
# Copy this to .env and customize

# Server
HOST=0.0.0.0
PORT=9090

# Ollama
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_TIMEOUT=30
OLLAMA_API_MODE=native  # Use "native" for Ollama's native API or "openai" for OpenAI-compatible endpoints

# Cache
CACHE_MAX_SIZE=1000
CACHE_SIMILARITY_THRESHOLD=0.85

# Circuit Breaker
CB_FAILURE_THRESHOLD=3
CB_RECOVERY_TIMEOUT=30

# Paths
MCP_SERVERS_CONFIG=configs/mcp-servers.json
ENHANCEMENT_RULES_CONFIG=configs/enhancement-rules.json

# Logging
LOG_LEVEL=info

# Secrets (load from Keychain in production)
# OBSIDIAN_API_KEY=
# GITHUB_TOKEN=
